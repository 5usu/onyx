{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"],
  "exclude": ["node_modules/*"]
}
